<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">

                    <a href="{{url}}">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger">Borrar link</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary">Editar</a>

                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tenes ningún link aún.</p>
                    <a href="/links/add">Crear uno!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>