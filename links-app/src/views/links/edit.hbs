<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="form-control" rows="2" placeholder="Descripción">{{link.description}}</textarea>
                        </div>
                        <div class="form-check">
                             <input type="checkbox" class="form-check-input" name="is_private" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Link privado</label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>

                    </form> 
                </div>
            </div>
        </div>
    </div>
</div>