<div class="container p-4">
     <h1 class="index-custom">Links p√∫blicos:</h1>
    <div class="row">        
        <div class="col-md-10">
            <div class="row">
               {{#each links}}
                    <div class="col-md-3 mx-left mb-3">
                        <div class="card"> 
                            <div class="card-header">{{title}}</div>    
                            <div class="card-body">
                                    <a class="card-title" href="{{url}}">{{url}}</a>                                   
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Publicado: {{timeago created_at}}</small>
                                <small class="text-muted">usuario: {{username}}</small>
                            </div>
                        </div>
                        
                    </div>
                   
                {{else}}
                    <div class="col-md-3 mx-auto">
                        <div class="card card-body text-center">
                            <p>No hay ningun link en la web.</p>
                            <a href="/posts/add">Crea uno!</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="col-md-2 mx-left">
            <h6>Bienvenido <br> {{user.fullname}}</h6>
            <hr>
            <h6>Tu usuario es: {{user.username}}</h6>
            <hr>
            <a href="/links" class="btn btn-primary">Click para empezar!</a>
        </div>
    </div>
</div>