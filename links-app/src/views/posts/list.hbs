<div class="container p-4">
    <div class="row">
        {{#each posts}}
        <div class="col-md-3">
            <div class="card text-center">
                <h5 class="card-header card-custom-hf">{{title}}</h5>
                <div class="card-body">
                    <h5 class="card-title">Descripción: {{description}}</h5>
                    <p class="card-text">Contacto: {{contact}}</p>                    
                    
                    <a href="{{url}}" class="btn btn-primary mb-2">{{title}}</a>

                   <div>
                    <a href="/posts/delete/{{id}}" class="btn btn-danger "> Borrar </a>
                    <a href="/posts/edit/{{id}}" class="btn btn-secondary"> Editar </a>
                   </div>
                    
                    <p>Publicado: {{timeago created_at}}</p>

                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tienes ningún post guardado.</p>
                    <a href="/posts/add">Crea uno!</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>